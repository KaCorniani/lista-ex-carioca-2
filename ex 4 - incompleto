using System;
using System.Collections.Generic;
using System.Linq;
using System.Reflection;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double[] hab = new double[1000];
            int fem = 0, masc = 0, iddmasc=0, iddfem=0, iddmedia=0, somaidd=0, iddmedmasc=0;
            double alturafem=0, mediaaltura=0;
            for (int i = 0; i < 3; i++)
            {
                Console.WriteLine("Digite o seu sexo: ");
                hab[i]=double.Parse(Console.ReadLine());

                if (hab[i] == 0)
                {
                    fem= +1 ;
                    Console.WriteLine("Digite sua idade: ");
                    iddfem = int.Parse(Console.ReadLine());
                    Console.WriteLine("Digite sua altura: ");
                    alturafem = double.Parse(Console.ReadLine());

                 
                }
                else { iddfem = 0; alturafem = 0;}

                if (hab[i]==1)
                {
                    masc++;
                    Console.WriteLine("Digite sua idade:: ");
                    iddmasc = int.Parse(Console.ReadLine());
                    
                }
                else { iddmasc = 0; }   
                 
            }

            somaidd = iddmasc + iddfem;

            iddmedia = somaidd / 3;

            mediaaltura = alturafem / fem;

            iddmedmasc = iddmasc / masc;
            Console.WriteLine("A média da idade do grupo é: " + iddmedia);
            Console.WriteLine("A média da altura das mulheres é: " + mediaaltura);
            Console.WriteLine("A média da idade dos homens é: " + iddmedmasc);
            Console.WriteLine("nº fem " + fem);
            Console.WriteLine("nº masc " + masc);
        }
    }
}
